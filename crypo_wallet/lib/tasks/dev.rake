namespace :dev do
  desc "CONFIGURA O AMBIENTE DE DESENVOLVIMENTO"
  task setup: :environment do
    if Rails.env.development?
      show_spinner("Apagando banco de dados...") do
        %x(rails db:drop)
      end
      show_spinner("Criando banco de dados...") {%x(rails db:create)} # substituindo o do pelas {}
      show_spinner("Migrando banco de dados...")  {%x(rails db:migrate)}
      %x(rails dev:add_mining_types)
      %x(rails dev:add_coins)
    else
      puts "Você não está em ambiente de desenvolvimento!"    
    end  
  end
  desc "Cadastra as Moedas"
  task add_coins: :environment do
    show_spinner("Cadastrando Moedas") do
      coins = [
              {
                description: "Bitcoin",
                acronym: "BTC",
                url_image: "https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRjvs0SenqJN-m5RilqHT0UzMMVM_-U13m-9A&usqp=CAU",
                mining_type: MiningType.find_by(acronym: 'PoW')                
              },
              {
                description: "Etherium",
                acronym: "ETC",
                url_image: "data:image/jpeg;base64,",
                mining_type: MiningType.all.sample               
              },
              {
                description: "Dash",
                acronym: "DHC",
                url_image: "data:image/png;base64,",
                mining_type: MiningType.all.sample                
              }
            ]   
      coins.each do |coin|
        Coin.find_or_create_by!(coin)
      end
    end    
  end
  desc "Cadastro dos tipos de Mineração"
  task add_mining_types: :environment do
    show_spinner("Cadastrando Tipos de Mineração...") do
      mining_types = 
      [
        {description: "Proof of Work", acronym: "PoW"},
        {description: "Proof of Stake", acronym: "PoS"},
        {description: "Proof of Capacit", acronym: "PoC"}
      ]
      mining_types.each do |mining_type|
        MiningType.find_or_create_by!(mining_type)
      end
    end    
  end
  
  private

  def show_spinner(msg_inicio, msg_final = "Concluído com sucesso!")
    spinner = TTY::Spinner.new("[:spinner] #{msg_inicio}")
    spinner.auto_spin 
    yield
    spinner.success("(#{msg_final})")
  end
end